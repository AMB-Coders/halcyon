<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field
				name="url"
				type="text"
				default="https://geddes.rcac.purdue.edu/v3/"
				label="Rancher API"
				description="URL of the Rancher API">
			</field>

			<field
				name="quotas][cpu_limit_namespace"
				type="text"
				default="0.25"
				label="Namespace CPU limit"
				description="% of Project Limit (total purchased)">
			</field>

			<field
				name="quotas][memory_limit_namespace"
				type="text"
				default="0.25"
				label="Namespace Memory limit"
				description="% of Project Limit (total purchased)">
			</field>

			<field
				name="quotas][pod_limit_project"
				type="text"
				default="200"
				label="Project Pod limit">
			</field>

			<field
				name="quotas][pod_limit_namespace"
				type="text"
				default="50"
				label="Namespace Pod limit">
			</field>
		</fieldset>
	</fields>
</config>
