<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="role_id" type="App\Modules\Users\Models\Fields\Roles" extension="users" multiple="true" default="" size="10" label="widget.userlist::userlist.params.role" description="widget.userlist::userlist.params.role desc" >
				<option value="">widget.userlist::userlist.params.all roles</option>
			</field>
			<field name="show_phone" type="radio" default="0" label="widget.userlist::userlist.params.show phone" description="widget.userlist::userlist.params.show phone desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="show_specialty" type="radio" default="1" label="widget.userlist::userlist.params.show specialty" description="widget.userlist::userlist.params.show specialty desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="show_email" type="radio" default="1" label="widget.userlist::userlist.params.show email" description="widget.userlist::userlist.params.show email desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="show_office" type="radio" default="0" label="widget.userlist::userlist.params.show office" description="widget.userlist::userlist.params.show office desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="show_title" type="radio" default="1" label="widget.userlist::userlist.params.show title" description="widget.userlist::userlist.params.show title desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="limit" type="text" default="5" label="widget.userlist::userlist.params.number of items" description="widget.userlist::userlist.params.number of items desc" />
			<field name="order" type="list" default="name" label="widget.userlist::userlist.params.ordering" description="widget.userlist::userlist.params.ordering desc">
				<option value="name">widget.userlist::userlist.params.order by name</option>
				<option value="created">widget.userlist::userlist.params.order by registered</option>
				<option value="email">widget.userlist::userlist.params.order by title</option>
			</field>
		</fieldset>
		<fieldset name="advanced">
			<field name="class" type="text" label="widgets::widgets.field.class name" description="widgets::widgets.field.class name description" />
			<field name="cache" type="list" default="1" label="widgets::widgets.field.caching" description="widgets::widgets.field.caching description">
				<option value="1">widgets::widgets.use global</option>
				<option value="0">widgets::widgets.no caching</option>
			</field>
			<field name="cache_time" type="text" default="900" label="widgets::widgets.field.cache time" description="widgets::widgets.field.cache time description" />
		</fieldset>
	</fields>
</config>