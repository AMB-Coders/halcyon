<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="role_id" type="App\Modules\Users\Models\Fields\Roles" extension="users" multiple="true" default="" size="10" label="widget.userlist::userlist.params.category" description="widget.userlist::userlist.params.category desc" >
				<option value="">widget.userlist::userlist.params.all roles</option>
			</field>
			<field name="item_title" type="radio" default="0" label="widget.userlist::userlist.params.show title" description="widget.userlist::userlist.params.show title desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="item_heading" type="list" default="h4" label="widget.userlist::userlist.params.header level" description="widget.userlist::userlist.params.header level desc">
				<option value="h1">H1</option>
				<option value="h2">H2</option>
				<option value="h3">H3</option>
				<option value="h4">H4</option>
				<option value="h5">H5</option>
			</field>
			<field name="limit" type="text" default="5" label="widget.userlist::userlist.params.number of items" description="widget.userlist::userlist.params.number of items desc" />
			<field name="order" type="list" default="name" label="widget.userlist::userlist.params.ordering" description="widget.userlist::userlist.params.ordering desc">
				<option value="name">widget.userlist::userlist.params.order by name</option>
				<option value="created">widget.userlist::userlist.params.order by registered</option>
				<option value="email">widget.userlist::userlist.params.order by title</option>
			</field>
		</fieldset>
		<fieldset name="advanced">
			<field name="layout" type="modulelayout" label="widgets::widgets.field.alt layout" description="widgets::widgets.field.alt layout description" />
			<field name="class_sfx" type="text" label="widgets::widgets.field.class suffix" description="widgets::widgets.field.class suffix description" />
			<field name="cache" type="list" default="1" label="widgets::widgets.field.caching" description="widgets::widgets.field.caching description">
				<option value="1">widgets::widgets.use global</option>
				<option value="0">widgets::widgets.no caching</option>
			</field>
			<field name="cache_time" type="text" default="900" label="widgets::widgets.field.cache time" description="widgets::widgets.field.cache time description" />
			<field name="cachemode" type="hidden" default="itemid">
				<option value="itemid"></option>
			</field>
		</fieldset>
	</fields>
</config>