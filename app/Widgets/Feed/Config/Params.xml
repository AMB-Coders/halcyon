<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="rssurl" type="url" size="50" label="widget.feed::feed.params.rssurl" description="widget.feed::feed.params.rssurl desc" />
			<field name="rssrtl" type="radio" default="0" label="widget.feed::feed.params.rtl" description="widget.feed::feed.params.rtl desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="rsstitle" type="radio" default="1" label="widget.feed::feed.params.rsstitle" description="widget.feed::feed.params.rsstitle desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="rssdesc" type="radio" default="1" label="widget.feed::feed.params.description" description="widget.feed::feed.params.description desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="rssimage" type="radio" default="1" label="widget.feed::feed.params.image" description="widget.feed::feed.params.image desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="rssitems" type="text" default="3" label="widget.feed::feed.params.items" description="widget.feed::feed.params.items desc" />
			<field name="rssitemdesc" type="radio" default="1" label="widget.feed::feed.params.itemdescription" description="widget.feed::feed.params.itemdescription desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="word_count" type="text" size="6" default="0" label="widget.feed::feed.params.wordcount" description="widget.feed::feed.params.wordcount desc" />
		</fieldset>
		<fieldset name="advanced">
			<field name="class" type="text" label="widgets::widgets.field.class name" description="widgets::widgets.field.class name description" />
			<field name="cache" type="list" default="1" label="widgets::widgets.field.caching" description="widgets::widgets.field.caching description">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="cache_time" type="text" default="900" label="widgets::widgets.field.cache time" description="widgets::widgets.field.cache time description" />
		</fieldset>
	</fields>
</config>