<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="showHere" type="radio" default="1" label="widget.breadcrumbs::config.show here" description="widget.breadcrumbs::config.show here description">
				<option value="0">global.no</option>
				<option value="1">global.yes</option>
			</field>
			<field name="showHome" type="radio" default="1" label="widget.breadcrumbs::config.show home" description="widget.breadcrumbs::config.show home description">
				<option value="0">global.no</option>
				<option value="1">global.yes</option>
			</field>
			<field name="homeText" type="text" label="widget.breadcrumbs::config.home text" description="widget.breadcrumbs::config.home text" />
			<field name="showLast" type="radio" default="1" label="widget.breadcrumbs::config.show last" description="widget.breadcrumbs::config.show last description">
				<option value="0">global.no</option>
				<option value="1">global.yes</option>
			</field>
			<field name="separator" type="text" label="widget.breadcrumbs::config.separator" description="widget.breadcrumbs::config.separator description" />
		</fieldset>
		<fieldset name="advanced">
			<field name="layout" type="modulelayout" label="widgets::widgets.field.alt layout" description="widgets::widgets.field.alt layout description" />
			<field name="moduleclass_sfx" type="text" label="widgets::widgets.field.class suffix" description="widgets::widgets.field.class suffix description" />
			<field name="cache" type="list" default="1" label="widgets::widgets.field.caching" description="widgets::widgets.field.caching description">
				<option value="1">widgets::widgets.use global</option>
				<option value="0">widgets::widgets.no caching</option>
			</field>
			<field name="cache_time" type="text" default="900" label="widgets::widgets.field.cache time" description="widgets::widgets.field.cache time description" />
			<field name="cachemode" type="hidden" default="itemid">
				<option value="itemid"></option>
			</field>
		</fieldset>
	</fields>
</config>