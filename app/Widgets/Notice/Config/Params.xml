<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="alertlevel" type="list" default="low" label="widget.notice::notice.alertlevel" description="widget.notice::notice.alertlevel desc">
				<option value="info">widget.notice::notice.alertlevels.low</option>
				<option value="warning">widget.notice::notice.alertlevels.medium</option>
				<option value="danger">widget.notice::notice.alertlevels.high</option>
			</field>
			<field name="htmlid" type="text" default="notices" label="widget.notice::notice.htmlid" description="widget.notice::notice.htmlid desc" />
			<field name="message" type="textarea" rows="5" cols="40" default="" label="widget.notice::notice.message" description="widget.notice::notice.message desc" />
			<field name="allowClose" type="radio" default="0" label="widget.notice::notice.allow closing" description="widget.notice::notice.allow closing desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="autolink" type="radio" default="1" label="widget.notice::notice.auto link" description="widget.notice::notice.auto link desc">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
		</fieldset>
	</fields>
</config>