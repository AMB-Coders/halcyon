<?xml version="1.0" encoding="utf-8"?>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="groupings" type="App\Modules\Core\Models\Fields\Modules" label="widget.adminmenu::adminmenu.groupings" description="widget.adminmenu::adminmenu.groupings description" />
		</fieldset>
		<fieldset name="advanced">
			<field name="class" type="text" label="widgets::widgets.field.class name" description="widgets::widgets.field.class name description" />
			<field name="htmlid" type="text" default="adminmenu" label="widgets::widgets.field.html id" description="widgets::widgets.field.html id description" />
			<field name="showhelp" type="list" default="1" label="widget.adminmenu::adminmenu.show help" description="widget.adminmenu::adminmenu.show help desc">
				<option value="0">global.hide</option>
				<option value="1">global.show</option>
			</field>
			<field name="cache_data" type="list" default="1" label="widgets::widgets.field.caching" description="widgets::widgets.field.caching description">
				<option value="1">global.yes</option>
				<option value="0">global.no</option>
			</field>
			<field name="cache_data_time" type="text" default="3600" label="widgets::widgets.field.cache time" description="widgets::widgets.field.cache time description" />
		</fieldset>
	</fields>
</config>