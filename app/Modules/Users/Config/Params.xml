<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="module">
		<field
			name="allowUserRegistration"
			type="radio"
			default="0"
			label="users::config.allow registration"
			description="users::config.allow registration desc">
			<option
				value="0">global.no</option>
			<option
				value="1">global.yes</option>
		</field>

		<field
			name="new_userrole"
			type="App\Modules\Users\Models\Fields\Usergroup"
			default="2"
			label="users::config.new user role"
			description="users::config.new user role desc">
		</field>

		<field
			name="guest_userrole"
			type="App\Modules\Users\Models\Fields\Usergroup"
			default="1"
			label="users::config.guest user role"
			description="users::config.guest user role desc">
		</field>

		<field
			name="mail_to_admin"
			type="radio"
			default="1"
			label="users::config.mail to admin"
			description="users::config.mail to admin desc">
			<option
				value="0">global.no</option>
			<option
				value="1">global.yes</option>
		</field>

		<field
			name="change_username"
			type="radio"
			default="0"
			label="users::config.change username"
			description="users::config.change username desc">
			<option
				value="0">global.no</option>
			<option
				value="1">global.yes</option>
		</field>

		<field name="defaultpic" type="text" menu="hide" default="/modules/users/images/profile.gif" label="Default picture" description="Default placeholder image for user pictures" />
	</fieldset>
	<fieldset name="permissions" label="access.permissions" description="access.permissions description">
		<field name="rules" type="rules" label="access.permissions" validate="rules" filter="rules" module="users" section="module" />
	</fieldset>
</config>
